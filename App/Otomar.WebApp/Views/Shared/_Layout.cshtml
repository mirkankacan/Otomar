                                    // Diğer tüm mega menu'leri hemen kapat
                                    Object.keys(allMegaMenus).forEach(key => {
                                        if (allMegaMenus[key] && allMegaMenus[key] !== megaMenu) {
                                            allMegaMenus[key].style.display = 'none';
                                        }
                                    });
