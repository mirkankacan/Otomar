                                    megaMenu.style.display = 'block';
                                });

                                // Ana menü öğesinden ayrılma - hemen kapat (delay yok)
                                menuItem.addEventListener('mouseleave', function (e) {
                                    // Eğer mega menu'ye geçiliyorsa kapatma
                                    const relatedTarget = e.relatedTarget;
                                    if (!relatedTarget) {
                                        megaMenu.style.display = 'none';
                                        return;
                                    }
                                    // Mega menu veya içindeki bir öğeye geçiliyorsa kapatma
                                    if (megaMenu.contains(relatedTarget) || relatedTarget === megaMenu || (relatedTarget.closest && relatedTarget.closest(`#mega-menu-${category.anA_ID}`))) {
                                        return;
                                    }
                                    // Başka bir menü öğesine geçiliyorsa hemen kapat
                                    if (relatedTarget.closest && relatedTarget.closest('.header__sub--menu__items')) {
                                        megaMenu.style.display = 'none';
                                        return;
                                    }
                                    // Diğer durumlarda hemen kapat
                                    megaMenu.style.display = 'none';
                                });

                                // Mega menu'ye hover
                                megaMenu.addEventListener('mouseenter', function () {
                                    clearTimeout(hoverTimeout);
                                    // Diğer tüm mega menu'leri hemen kapat
                                    Object.keys(allMegaMenus).forEach(key => {
                                        if (allMegaMenus[key] && allMegaMenus[key] !== megaMenu) {
                                            allMegaMenus[key].style.display = 'none';
                                        }
                                    });
                                    // Bu mega menu'yu göster
                                    megaMenu.style.display = 'block';
                                });

                                // Mega menu'den ayrılma - hemen kapat (delay yok)
                                megaMenu.addEventListener('mouseleave', function (e) {
                                    // Eğer ana menü öğesine geri dönülüyorsa kapatma
                                    const relatedTarget = e.relatedTarget;
                                    if (!relatedTarget) {
                                        megaMenu.style.display = 'none';
                                        return;
                                    }
                                    // Ana menü öğesine veya link'e geri dönülüyorsa kapatma
                                    if (menuItem.contains(relatedTarget) || relatedTarget === menuItem || relatedTarget === menuLink || (relatedTarget.closest && relatedTarget.closest(`#submenu-item-${category.anA_ID}`))) {
                                        return;
                                    }
                                    // Başka bir menü öğesine geçiliyorsa hemen kapat
                                    if (relatedTarget.closest && relatedTarget.closest('.header__sub--menu__items')) {
                                        megaMenu.style.display = 'none';
                                        return;
                                    }
                                    // Diğer durumlarda hemen kapat
                                    megaMenu.style.display = 'none';
                                });
                            }

                            allProductsSubmenu.appendChild(menuItem);
                        });

                    } catch (error) {
                        console.error('Menü yüklenirken hata oluştu:', error);
                    }
                }

                async function loadBrandsMenu() {
                    try {
                        const response = await makeRequest('/kategori/marka-model-yil', 'GET');
                        if (!response || !Array.isArray(response)) {
                            console.error('Marka verisi beklenen formatta değil:', response);
                            return;
                        }
                        // Veriyi global olarak kaydet (Shop sayfasında kullanmak için)
                        window.brandsModelsYearsData = response;
                        const menuWrapper = document.getElementById('dynamic-menu-wrapper');
                        if (!menuWrapper) {
                            console.error('Menü wrapper bulunamadı');
                            return;
                        }

                        // "Tüm Ürünler" menüsünden sonra ve "Diğer" menüsünden önce eklemek için referans al
                        const allProductsMenuItem = document.getElementById('all-products-menu-item');
                        const otherMenuItem = document.getElementById('other-menu-item');

                        if (!allProductsMenuItem || !otherMenuItem) {
                            console.error('Referans menü öğeleri bulunamadı');
                            return;
                        }

                        // İzin verilen markalar
                        const allowedBrands = ['Alfa Romeo', 'Citroen', 'Fiat', 'Jeep', 'Peugeot'];

                        // Markaları filtrele ve sırala
                        // Property adları: markA_KODU, markA_ADI, aktif, modelsYears
                        const filteredBrands = response
                            .filter(brand => {
                                const aktif = brand.aktif !== undefined ? brand.aktif : brand.AKTIF;
                                const markaAdi = brand.markA_ADI || brand.MARKA_ADI;
                                return aktif && allowedBrands.includes(markaAdi);
                            })
                            .sort((a, b) => {
                                const markaAdiA = a.markA_ADI || a.MARKA_ADI;
                                const markaAdiB = b.markA_ADI || b.MARKA_ADI;
                                const indexA = allowedBrands.indexOf(markaAdiA);
                                const indexB = allowedBrands.indexOf(markaAdiB);
                                return indexA - indexB;
                            });

                        const remainingBrands = response
                            .filter(brand => {
                                const aktif = brand.aktif !== undefined ? brand.aktif : brand.AKTIF;
                                const markaAdi = brand.markA_ADI || brand.MARKA_ADI;
                                return aktif && !allowedBrands.includes(markaAdi);
                            })
                            .sort((a, b) => {
                                const markaAdiA = a.markA_ADI || a.MARKA_ADI;
                                const markaAdiB = b.markA_ADI || b.MARKA_ADI;
                                return markaAdiA.localeCompare(markaAdiB, 'tr');
                            });

                        // Mevcut dinamik marka menülerini kaldır (yeniden yükleme durumunda)
                        const existingBrandMenus = menuWrapper.querySelectorAll('[id^="brand-menu-item-"]');
                        existingBrandMenus.forEach(menu => menu.remove());

                        filteredBrands.forEach(brand => {
                            // Property adları: markA_KODU, markA_ADI, aktif, modelsYears
                            const markaAdi = brand.markA_ADI || brand.MARKA_ADI;
                            const markaKodu = brand.markA_KODU || brand.MARKA_KODU;

                            // Marka adını URL formatına çevir (generateSlug ile)
                            const brandSlug = generateSlug(markaAdi);

                            // Marka menü öğesi
                            const brandMenuItem = document.createElement('li');
                            brandMenuItem.className = 'header__menu--items mega__menu--items';
                            brandMenuItem.id = `brand-menu-item-${markaKodu}`;

                            // Marka linki
                            const brandLink = document.createElement('a');
                            brandLink.className = 'header__menu--link d-flex align-items-center';
                            brandLink.href = `/magaza/marka/${brandSlug}`;

                            // Marka logosu (lowercase, boşluklar korunur: "alfa romeo.webp")
                            const brandLogo = document.createElement('img');
                            const brandLogoPath = markaAdi.toLowerCase();
                            brandLogo.src = `/assets/img/logo/${brandLogoPath}.webp`;
                            brandLogo.style.width = '60px';
                            brandLogo.style.height = 'auto';
                            brandLogo.alt = `${markaAdi} logo`;
                            brandLogo.onerror = function() {
                                // Alternatif olarak slug formatını dene
                                this.src =`/assets/img/logo/${brandSlug}.webp`;
                            };
                            brandLink.appendChild(brandLogo);

                            // Ok ikonu
                            const arrowIcon = document.createElementNS('http://www.w3.org/2000/svg', 'svg');
                            arrowIcon.setAttribute('class', 'menu__arrowdown--icon');
                            arrowIcon.setAttribute('xmlns', 'http://www.w3.org/2000/svg');
                            arrowIcon.setAttribute('width', '12');
                            arrowIcon.setAttribute('height', '7.41');
                            arrowIcon.setAttribute('viewBox', '0 0 12 7.41');
                            const path = document.createElementNS('http://www.w3.org/2000/svg', 'path');
                            path.setAttribute('d', 'M16.59,8.59,12,13.17,7.41,8.59,6,10l6,6,6-6Z');
                            path.setAttribute('transform', 'translate(-6 -8.59)');
                            path.setAttribute('fill', 'currentColor');
                            path.setAttribute('opacity', '0.7');
                            arrowIcon.appendChild(path);
                            brandLink.appendChild(arrowIcon);

                            brandMenuItem.appendChild(brandLink);

                            // Mega menu (modeller için) - Grid layout (10 sütun)
                            const megaMenu = document.createElement('ul');
                            megaMenu.className = 'header__mega--menu';
                            megaMenu.style.display = 'grid';
                            megaMenu.style.gridTemplateColumns = 'repeat(10, 1fr)';
                            megaMenu.style.gap = '8px';
                            megaMenu.style.padding = '20px';
                            megaMenu.style.width = '100%';
                            megaMenu.style.maxWidth = '1400px';

                            // Modelleri filtrele
                            const modelsYears = brand.modelsYears || brand.ModelsYears || [];
                            const models = modelsYears.filter(model => {
                                const aktif = model.aktif !== undefined ? model.aktif : model.AKTIF;
                                return aktif;
                            });

                            // Her modeli grid item olarak ekle
                            models.forEach(model => {
                                const modelLi = document.createElement('li');
                                modelLi.style.listStyle = 'none';
                                modelLi.style.display = 'flex';
                                modelLi.style.flexDirection = 'column';
                                modelLi.style.alignItems = 'center';
                                modelLi.style.textAlign = 'center';

                                const modelAdi = model.modeL_ADI || model.MODEL_ADI;
                                const modelSlug = generateSlug(modelAdi);

                                const modelLink = document.createElement('a');
                                modelLink.href = `/magaza/marka/${brandSlug}/model/${modelSlug}`;
                                modelLink.style.display = 'flex';
                                modelLink.style.flexDirection = 'column';
                                modelLink.style.alignItems = 'center';
                                modelLink.style.textDecoration = 'none';
                                modelLink.style.width = '100%';

                                // Model logosu
                                const modelImg = document.createElement('img');
                                modelImg.className = 'img-thumbnail';
                                modelImg.src = `/assets/img/cars/${markaAdi.toUpperCase()}/${modelAdi.toUpperCase()}.webp`;
                                modelImg.loading = 'lazy';
                                modelImg.style.width = '100%';
                                modelImg.style.height = '80px';
                                modelImg.style.objectFit = 'contain';
                                modelImg.style.marginBottom = '8px';
                                modelImg.style.transition = 'border-color 0.3s ease';
                                modelImg.alt = `${markaAdi} ${modelAdi}`;
                                modelImg.onerror = function() {
                                    this.style.display = 'none';
                                };
                                modelLink.appendChild(modelImg);

                                // Model adı
                                const modelName = document.createElement('span');
                                modelName.className = 'model-name';
                                modelName.textContent = modelAdi.toUpperCase();
                                modelName.style.fontSize = '1.2rem';
                                modelName.style.fontWeight = '500';
                                modelName.style.color = '#333';
                                modelName.style.wordBreak = 'break-word';
                                modelName.style.transition = 'color 0.3s ease';
                                modelLink.appendChild(modelName);

                                modelLi.appendChild(modelLink);
                                megaMenu.appendChild(modelLi);
                            });

                            brandMenuItem.appendChild(megaMenu);
                            // "Tüm Ürünler" menüsünden sonra, "Diğer" menüsünden önce ekle
                            menuWrapper.insertBefore(brandMenuItem, otherMenuItem);
                        });

                        // Kalan markaları "Diğer" menüsü altına ekle
                        const otherSubmenu = otherMenuItem.querySelector('.header__sub--menu');
                        if (otherSubmenu) {
                            // Mevcut statik içeriği temizle
                            otherSubmenu.innerHTML = '';

                            remainingBrands.forEach(brand => {
                                const markaAdi = brand.markA_ADI || brand.MARKA_ADI;
                                const brandSlugForOther = generateSlug(markaAdi);

                                // Marka menü öğesi
                                const brandMenuItem = document.createElement('li');
                                brandMenuItem.className = 'header__sub--menu__items';

                                // Marka linki - "Tüm Ürünler" menüsündeki gibi logo ve metin
                                const brandLink = document.createElement('a');
                                brandLink.className = 'header__sub--menu__link';
                                brandLink.href = `/magaza/marka/${brandSlugForOther}`;
                                brandLink.style.display = 'flex';
                                brandLink.style.alignItems = 'center';
                                brandLink.style.gap = '10px';

                                // Marka logosu (lowercase, boşluklar korunur: "alfa romeo.webp")
                                const brandLogo = document.createElement('img');
                                const brandLogoPath = markaAdi.toLowerCase();
                                brandLogo.src = `/assets/img/logo/${brandLogoPath}.webp`;
                                brandLogo.style.width = '50px';
                                brandLogo.style.height = 'auto';
                                brandLogo.style.objectFit = 'contain';
                                brandLogo.style.flexShrink = '0';
                                brandLogo.alt = `${markaAdi} logo`;
                                brandLogo.onerror = function() {
                                    // Alternatif olarak slug formatını dene
                                    this.src = `/assets/img/logo/${markaAdi}.webp`;
                                };
                                brandLink.appendChild(brandLogo);

                                // Marka adı
                                const brandName = document.createElement('span');
                                brandName.textContent = markaAdi.toUpperCase();
                                brandLink.appendChild(brandName);

                                brandMenuItem.appendChild(brandLink);
                                otherSubmenu.appendChild(brandMenuItem);
                            });
                        }

                        // Offcanvas (mobil) menüyü aynı markalarla doldur – tüm markalar logo + ad ile görünür
                        const offcanvasUl = document.getElementById('offcanvas-menu-ul');
                        if (offcanvasUl) {
                            const existingOffcanvasBrands = offcanvasUl.querySelectorAll('li.offcanvas__menu_li--brand');
                            existingOffcanvasBrands.forEach(el => el.remove());
                            const allBrandsForOffcanvas = [...filteredBrands, ...remainingBrands];
                            allBrandsForOffcanvas.forEach(brand => {
                                const markaAdi = brand.markA_ADI || brand.MARKA_ADI;
                                const brandSlug = generateSlug(markaAdi);
                                const brandLogoPath = markaAdi.toLowerCase();
                                const li = document.createElement('li');
                                li.className = 'offcanvas__menu_li offcanvas__menu_li--brand';
                                const a = document.createElement('a');
                                a.className = 'offcanvas__menu_item';
                                a.href = `/magaza/marka/${brandSlug}`;
                                const div = document.createElement('div');
                                div.className = 'menu-item-content d-flex align-items-center gap-2';
                                const img = document.createElement('img');
                                img.src = `/assets/img/logo/${brandLogoPath}.webp`;
                                img.alt = markaAdi.toUpperCase();
                                img.width = 60;
                                img.height = 'auto';
                                img.loading = 'lazy';
                                img.onerror = function() { this.src = `/assets/img/logo/${brandSlug}.webp`; };
                                const span = document.createElement('span');
                                span.textContent = markaAdi.toUpperCase();
                                div.appendChild(img);
                                div.appendChild(span);
                                a.appendChild(div);
                                li.appendChild(a);
                                offcanvasUl.appendChild(li);
                            });
                        }

                    } catch (error) {
                        console.error('Markalar menüsü yüklenirken hata oluştu:', error);
                    }
                }

                $(document).ready(async function () {
                    await getShippingThreshold();
                    await loadDynamicMenu();
                    await loadBrandsMenu();
                             // Decrease butonuna ek kontrol
                    $('.decrease').on('click', function() {
                        let input = $(this).siblings('label').find('[data-counter]');
                        let currentValue = parseInt(input.val()) || 1;

                        // Eğer 1 ise, 1'de kal
                        if (currentValue <= 1) {
                            input.val(1);
                            return false; // Butonu durdur
                        }
                    });

                    // Input'a manuel 0 veya negatif değer girilmesini engelle
                    $('[data-counter]').on('input change blur', function() {
                        let value = parseInt($(this).val());
                        if (isNaN(value) || value < 1) {
                            $(this).val(1);
                        }
                    });
                });
