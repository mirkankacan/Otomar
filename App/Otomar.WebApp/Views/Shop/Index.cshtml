@{
    ViewData["Title"] = "Mağaza";
    Layout = "/Views/Shared/_Layout.cshtml";

    var mainCategoryName = ViewBag.MainCategoryName as string;
    var subCategoryName = ViewBag.SubCategoryName as string;
    var brandName = ViewBag.BrandName as string;
    var modelName = ViewBag.ModelName as string;
    var versionName = ViewBag.VersionName as string;
    var manufacturerName = ViewBag.ManufacturerName as string;
}

<!-- Start shop section -->
<div class="shop__section">
    <div class="container">
        <div class="row">
            <div class="col-xl-3 col-lg-4 shop-col-width-lg-4" style="position: relative;">
                <div class="shop__sidebar--widget widget__area d-none d-lg-block"
                    style="position: sticky; top: 20px; align-self: flex-start; max-height: calc(100vh - 40px); overflow-y: auto;">
                    <div class="single__widget widget__bg">
                        <h2 class="widget__title h3 d-flex align-items-center justify-content-between w-100"
                            style="cursor: pointer;" id="categories-toggle">
                            <span>Kategoriler</span>
                            <svg id="categories-arrow" class="widget__categories--menu__arrowdown--icon"
                                style="top: unset !important; transition: transform 0.3s ease; transform: rotate(180deg);"
                                xmlns="http://www.w3.org/2000/svg" width="12.355" height="8.394">
                                <path d="M15.138,8.59l-3.961,3.952L7.217,8.59,6,9.807l5.178,5.178,5.178-5.178Z"
                                    transform="translate(-6 -8.59)" fill="currentColor"></path>
                            </svg>

                        </h2>
                        <ul id="shop-categories-menu" class="widget__categories--menu">
                            <!-- Kategoriler dinamik olarak yüklenecek -->
                        </ul>
                    </div>

                    <div class="single__widget widget__bg">
                        <h2 class="widget__title h3 d-flex align-items-center justify-content-between w-100"
                            style="cursor: pointer;" id="brands-toggle">
                            <span>Marka / Model / Versiyon</span>
                            <svg id="brands-arrow" class="widget__categories--menu__arrowdown--icon"
                                style="top: unset !important; transition: transform 0.3s ease; transform: rotate(180deg);"
                                xmlns="http://www.w3.org/2000/svg" width="12.355" height="8.394">
                                <path d="M15.138,8.59l-3.961,3.952L7.217,8.59,6,9.807l5.178,5.178,5.178-5.178Z"
                                    transform="translate(-6 -8.59)" fill="currentColor"></path>
                            </svg>
                        </h2>
                        <ul id="shop-brands-menu" class="widget__categories--menu">
                            <!-- Markalar dinamik olarak yüklenecek -->
                        </ul>
                    </div>
                    <div class="single__widget widget__bg">
                        <h2 class="widget__title h3">Üretici Marka</h2>
                        <ul id="shop-manufacturers-menu" class="widget__form--check">
                            <!-- Üreticiler dinamik olarak yüklenecek -->
                        </ul>
                    </div>
                    <div class="single__widget price__filter widget__bg">
                        <h2 class="widget__title h3">Fiyata Göre Filtrele</h2>
                        <form class="price__filter--form" action="#">
                            <div class="price__filter--form__inner mb-15 d-flex align-items-center">
                                <div class="price__filter--group">
                                    <label class="price__filter--label" for="Filter-Price-GTE2">En Az</label>
                                    <div class="price__filter--input border-radius-5 d-flex align-items-center">
                                        <span class="price__filter--currency">₺</span>
                                        <input class="price__filter--input__field border-0" name="filter.v.price.gte"
                                            id="Filter-Price-GTE2" type="number" placeholder="0" min="0" max="250.00">
                                    </div>
                                </div>
                                <div class="price__divider">
                                    <span>-</span>
                                </div>
                                <div class="price__filter--group">
                                    <label class="price__filter--label" for="Filter-Price-LTE2">En Çok</label>
                                    <div class="price__filter--input border-radius-5 d-flex align-items-center">
                                        <span class="price__filter--currency">₺</span>
                                        <input class="price__filter--input__field border-0" name="filter.v.price.lte"
                                            id="Filter-Price-LTE2" type="number" min="0" placeholder="250,00"
                                            max="250.00">
                                    </div>
                                </div>
                            </div>
                            <button class="primary__btn price__filter--btn" type="submit">Filtrele</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-xl-9 col-lg-8 shop-col-width-lg-8">
                <div class="shop__right--sidebar">

                    <div class="shop__product--wrapper">
                        <div class="shop__header d-flex align-items-center justify-content-between mb-30">
                            <div class="product__view--mode d-flex align-items-center">
                                <button class="widget__filter--btn d-flex d-lg-none align-items-center" data-offcanvas>
                                    <svg class="widget__filter--btn__icon" xmlns="http://www.w3.org/2000/svg"
                                        viewBox="0 0 512 512">
                                        <path fill="none" stroke="currentColor" stroke-linecap="round"
                                            stroke-linejoin="round" stroke-width="28"
                                            d="M368 128h80M64 128h240M368 384h80M64 384h240M208 256h240M64 256h80" />
                                        <circle cx="336" cy="128" r="28" fill="none" stroke="currentColor"
                                            stroke-linecap="round" stroke-linejoin="round" stroke-width="28" />
                                        <circle cx="176" cy="256" r="28" fill="none" stroke="currentColor"
                                            stroke-linecap="round" stroke-linejoin="round" stroke-width="28" />
                                        <circle cx="336" cy="384" r="28" fill="none" stroke="currentColor"
                                            stroke-linecap="round" stroke-linejoin="round" stroke-width="28" />
                                    </svg>
                                    <span class="widget__filter--btn__text">Filter</span>
                                </button>
                                <div class="product__view--mode__list product__short--by align-items-center d-flex ">
                                    <label class="product__view--label">Sayfa Başına :</label>
                                    <div class="select shop__header--select">
                                        <select id="pageSizeSelect" class="product__view--select">
                                            <option value="12">12</option>
                                            <option value="24">24</option>
                                            <option selected value="36">36</option>
                                            <option value="50">50</option>
                                            <option value="100">100</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="product__view--mode__list product__short--by align-items-center d-flex">
                                    <label class="product__view--label">Sırala :</label>
                                    <div class="select shop__header--select">
                                        <select id="orderBySelect" class="product__view--select">
                                            <option selected value="1">En Yeniler</option>
                                            <option value="2">En Çok Satan</option>
                                            <option value="3">Ucuzdan Pahalıya</option>
                                            <option value="4">Pahalıdan Ucuza</option>
                                        </select>
                                    </div>

                                </div>
                            </div>
                            <p class="product__showing--count">50 sonuçtan 1-36 gösteriliyor</p>
                        </div>
                        <div class="tab_content">
                            <div id="product_grid" class="tab_pane active show">
                                <div class="product__section--inner">
                                    <div id="shop-products-grid" class="row mb--n30">
                                        <!-- Ürünler dinamik olarak yüklenecek -->
                                    </div>
                                </div>
                                <!-- Infinite scroll loading indicator -->
                                <div id="infinite-scroll-loader" class="text-center py-4" style="display: none;">
                                    <div class="spinner-border text-primary" role="status">
                                        <span class="visually-hidden">Yükleniyor...</span>
                                    </div>
                                    <p class="mt-2 text-muted">Daha fazla ürün yükleniyor...</p>
                                </div>

                                <!-- Tüm ürünler yüklendi göstergesi -->
                                <div id="all-products-loaded" class="text-center py-4" style="display: none;">
                                    <!--  <p class="text-muted">Tüm ürünler yüklendi</p>-->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End shop section -->

@section Scripts {
    <script>
        // URL filtre parametreleri (ViewBag'den)
        const urlFilters = {
            mainCategory: '@(mainCategoryName ?? "")',
            subCategory: '@(subCategoryName ?? "")',
            brand: '@(brandName ?? "")',
            model: '@(modelName ?? "")',
            version: '@(versionName ?? "")',
            manufacturer: '@(manufacturerName ?? "")'
        };
        let currentPage = 1;
        let pageSize = 36;
        let orderBy = 'latest';
        let minPrice = null;
        let maxPrice = null;
        let isLoading = false;
        let hasMoreProducts = true;
        let totalProductCount = 0;

        // Seçili filtreleri vurgulama fonksiyonu
        function highlightActiveFilters() {
            // Alt kategori seçiliyse
            if (urlFilters.subCategory) {
                const allCategories = document.querySelectorAll('#shop-categories-menu > li.widget__categories--menu__list');
                allCategories.forEach(catLi => {
                    const subMenu = catLi.querySelector('.widget__categories--sub__menu');
                    if (!subMenu) {
                        // Alt kategorisi yoksa bu ana kategoriyi gizle
                        catLi.style.display = 'none';
                        return;
                    }

                    const subLinks = subMenu.querySelectorAll('a');
                    let hasActiveSubCat = false;

                    subLinks.forEach(link => {
                        const href = link.getAttribute('href') || '';
                        if (href.includes(urlFilters.subCategory)) {
                            hasActiveSubCat = true;
                            // Alt kategoriyi vurgula
                            const textSpan = link.querySelector('.widget__categories--sub__menu--text');
                            if (textSpan) {
                                textSpan.style.color = 'var(--secondary-color)';
                                textSpan.style.fontWeight = '700';
                            }
                        }
                    });

                    if (hasActiveSubCat) {
                        // Ana kategoriyi vurgula ve aç
                        const parentText = catLi.querySelector('.widget__categories--menu__text');
                        if (parentText) {
                            parentText.style.color = 'var(--secondary-color)';
                            parentText.style.fontWeight = '700';
                        }
                        $(subMenu).slideDown(0);
                        catLi.classList.add('active');
                        const parentArrow = catLi.querySelector('.widget__categories--menu__arrowdown--icon');
                        if (parentArrow) {
                            parentArrow.style.transform = 'rotate(180deg)';
                        }
                    } else {
                        // Bu kategoride aktif alt kategori yoksa, ana kategoriyi gizle
                        catLi.style.display = 'none';
                    }
                });
            }
            // Sadece ana kategori seçiliyse
            else if (urlFilters.mainCategory) {
                const allCategories = document.querySelectorAll('#shop-categories-menu > li.widget__categories--menu__list');
                allCategories.forEach(catLi => {
                    const categoryText = catLi.querySelector('.widget__categories--menu__text');
                    if (categoryText) {
                        const categoryName = categoryText.textContent.trim();
                        const categorySlug = generateSlug(categoryName);
                        if (categorySlug === urlFilters.mainCategory) {
                            // Seçili kategoriyi vurgula
                            categoryText.style.color = 'var(--secondary-color)';
                            categoryText.style.fontWeight = '700';

                            // Alt kategorileri aç
                            const subMenu = catLi.querySelector('.widget__categories--sub__menu');
                            if (subMenu) {
                                $(subMenu).slideDown(0);
                                catLi.classList.add('active');
                                const arrowIcon = catLi.querySelector('.widget__categories--menu__arrowdown--icon');
                                if (arrowIcon) {
                                    arrowIcon.style.transform = 'rotate(180deg)';
                                }
                            }
                        } else {
                            // Diğer kategorileri gizle
                            catLi.style.display = 'none';
                        }
                    }
                });
            }

            // Versiyon seçiliyse
            if (urlFilters.version) {
                const allBrands = document.querySelectorAll('#shop-brands-menu > li.widget__categories--menu__list');
                allBrands.forEach(brandLi => {
                    const modelsMenu = brandLi.querySelector('.widget__categories--sub__menu');
                    if (!modelsMenu) {
                        brandLi.style.display = 'none';
                        return;
                    }

                    let hasActiveVersion = false;
                    const modelLis = modelsMenu.querySelectorAll('li.widget__categories--sub__menu--list');

                    modelLis.forEach(modelLi => {
                        const versionsMenu = modelLi.querySelector('ul[style*="border-left"]');
                        if (!versionsMenu) {
                            modelLi.style.display = 'none';
                            return;
                        }

                        const versionLinks = versionsMenu.querySelectorAll('a[data-version-slug]');
                        let hasActiveVersionInModel = false;

                        versionLinks.forEach(versionLink => {
                            const versionSlug = versionLink.getAttribute('data-version-slug');
                            if (versionSlug === urlFilters.version) {
                                hasActiveVersionInModel = true;
                                hasActiveVersion = true;
                                // Seçili versiyonu vurgula
                                const versionText = versionLink.querySelector('.widget__categories--sub__menu--text');
                                if (versionText) {
                                    versionText.style.color = 'var(--secondary-color)';
                                    versionText.style.fontWeight = '700';
                                }
                            }
                            // Tüm versiyonları göster
                        });

                        if (hasActiveVersionInModel) {
                            // Modeli vurgula ve versiyonları aç
                            const modelText = modelLi.querySelector('.widget__categories--sub__menu--text[data-model-slug]');
                            if (modelText) {
                                modelText.style.color = 'var(--secondary-color)';
                                modelText.style.fontWeight = '700';
                            }
                            $(versionsMenu).slideDown(0);
                            const modelArrow = modelLi.querySelector('label svg');
                            if (modelArrow) {
                                modelArrow.style.transform = 'rotate(180deg)';
                            }
                        } else {
                            // Diğer modelleri gizle
                            modelLi.style.display = 'none';
                        }
                    });

                    if (hasActiveVersion) {
                        // Markayı vurgula ve modelleri aç
                        const brandText = brandLi.querySelector('.widget__categories--menu__text[data-brand-slug]');
                        if (brandText) {
                            brandText.style.color = 'var(--secondary-color)';
                            brandText.style.fontWeight = '700';
                        }
                        $(modelsMenu).slideDown(0);
                        brandLi.classList.add('active');
                        const brandArrow = brandLi.querySelector('label svg');
                        if (brandArrow) {
                            brandArrow.style.transform = 'rotate(180deg)';
                        }
                    } else {
                        // Diğer markaları gizle
                        brandLi.style.display = 'none';
                    }
                });
            }
            // Sadece model seçiliyse
            else if (urlFilters.model) {
                const allBrands = document.querySelectorAll('#shop-brands-menu > li.widget__categories--menu__list');
                allBrands.forEach(brandLi => {
                    const modelsMenu = brandLi.querySelector('.widget__categories--sub__menu');
                    if (!modelsMenu) {
                        brandLi.style.display = 'none';
                        return;
                    }

                    let hasActiveModel = false;
                    const modelLis = modelsMenu.querySelectorAll('li.widget__categories--sub__menu--list');

                    modelLis.forEach(modelLi => {
                        const modelText = modelLi.querySelector('.widget__categories--sub__menu--text[data-model-slug]');
                        if (modelText) {
                            const modelSlug = modelText.getAttribute('data-model-slug');
                            if (modelSlug === urlFilters.model) {
                                hasActiveModel = true;
                                // Seçili modeli vurgula
                                modelText.style.color = 'var(--secondary-color)';
                                modelText.style.fontWeight = '700';

                                // Versiyonları aç
                                const versionsMenu = modelLi.querySelector('ul[style*="border-left"]');
                                if (versionsMenu) {
                                    $(versionsMenu).slideDown(0);
                                    const modelArrow = modelLi.querySelector('label svg');
                                    if (modelArrow) {
                                        modelArrow.style.transform = 'rotate(180deg)';
                                    }
                                }
                            }
                            // Tüm modelleri göster
                        }
                    });

                    if (hasActiveModel) {
                        // Markayı vurgula ve modelleri aç
                        const brandText = brandLi.querySelector('.widget__categories--menu__text[data-brand-slug]');
                        if (brandText) {
                            brandText.style.color = 'var(--secondary-color)';
                            brandText.style.fontWeight = '700';
                        }
                        $(modelsMenu).slideDown(0);
                        brandLi.classList.add('active');
                        const brandArrow = brandLi.querySelector('label svg');
                        if (brandArrow) {
                            brandArrow.style.transform = 'rotate(180deg)';
                        }
                    } else {
                        // Diğer markaları gizle
                        brandLi.style.display = 'none';
                    }
                });
            }
            // Sadece marka seçiliyse
            else if (urlFilters.brand) {
                const allBrands = document.querySelectorAll('#shop-brands-menu > li.widget__categories--menu__list');
                allBrands.forEach(brandLi => {
                    const brandText = brandLi.querySelector('.widget__categories--menu__text[data-brand-slug]');
                    if (brandText) {
                        const brandSlug = brandText.getAttribute('data-brand-slug');
                        if (brandSlug === urlFilters.brand) {
                            // Seçili markayı vurgula
                            brandText.style.color = 'var(--secondary-color)';
                            brandText.style.fontWeight = '700';

                            // Modelleri aç
                            const modelsMenu = brandLi.querySelector('.widget__categories--sub__menu');
                            if (modelsMenu) {
                                $(modelsMenu).slideDown(0);
                                brandLi.classList.add('active');
                                const brandArrow = brandLi.querySelector('label svg');
                                if (brandArrow) {
                                    brandArrow.style.transform = 'rotate(180deg)';
                                }
                            }
                        } else {
                            // Diğer markaları gizle
                            brandLi.style.display = 'none';
                        }
                    }
                });
            }

            // Üretici seçiliyse, checkbox'ı işaretle ve label'ı vurgula
            if (urlFilters.manufacturer) {
                const manufacturerLis = document.querySelectorAll('#shop-manufacturers-menu > li.widget__categories--sub__menu--list');
                manufacturerLis.forEach(li => {
                    const label = li.querySelector('label');
                    if (label) {
                        const textSpan = label.querySelector('.widget__categories--sub__menu--text');
                        if (textSpan) {
                            const labelText = textSpan.textContent.trim();
                            const manufacturerSlug = generateSlug(labelText);
                            if (manufacturerSlug === urlFilters.manufacturer) {
                                // Seçili üreticiyi vurgula
                                const checkbox = li.querySelector('input[type="checkbox"]');
                                if (checkbox) checkbox.checked = true;
                                textSpan.style.color = 'var(--secondary-color)';
                                textSpan.style.fontWeight = '700';
                            } else {
                                // Diğer üreticileri gizle
                                li.style.display = 'none';
                            }
                        }
                    }
                });
            }
        }

        $(document).ready(function () {
            loadProducts();
            setupInfiniteScroll();
            loadShopCategories();
            loadShopBrands();
            loadShopManufacturers();

            // Kategoriler menüsünü aç eğer filtre seçiliyse
            if (urlFilters.mainCategory || urlFilters.subCategory) {
                setTimeout(() => {
                    $('#shop-categories-menu').slideDown(0);
                    $('#categories-arrow').css('transform', 'rotate(180deg)');
                }, 100);
            }

            // Markalar menüsünü aç eğer filtre seçiliyse
            if (urlFilters.brand || urlFilters.model || urlFilters.version) {
                setTimeout(() => {
                    $('#shop-brands-menu').slideDown(0);
                    $('#brands-arrow').css('transform', 'rotate(180deg)');
                }, 100);
            }

            // Üreticiler menüsünü aç eğer filtre seçiliyse
            if (urlFilters.manufacturer) {
                setTimeout(() => {
                    $('#shop-manufacturers-menu').slideDown(0);
                    $('#manufacturers-arrow').css('transform', 'rotate(180deg)');
                }, 100);
            }

            // Kategoriler toggle
            $('#categories-toggle').on('click', function () {
                const menu = $('#shop-categories-menu');
                const arrow = $('#categories-arrow');

                if (menu.is(':visible')) {
                    menu.slideUp(300);
                    arrow.css('transform', 'rotate(0deg)');
                } else {
                    menu.slideDown(300);
                    arrow.css('transform', 'rotate(180deg)');
                }
            });

            // Markalar toggle
            $('#brands-toggle').on('click', function () {
                const menu = $('#shop-brands-menu');
                const arrow = $('#brands-arrow');

                if (menu.is(':visible')) {
                    menu.slideUp(300);
                    arrow.css('transform', 'rotate(0deg)');
                } else {
                    menu.slideDown(300);
                    arrow.css('transform', 'rotate(180deg)');
                }
            });

            // Sayfa başına değiştiğinde
            $('#pageSizeSelect').on('change', function () {
                pageSize = parseInt($(this).val());
                currentPage = 1;
                hasMoreProducts = true;
                $('html, body').animate({ scrollTop: 0 }, 300);
                loadProducts(false);
            });

            // Sıralama değiştiğinde
            $('#orderBySelect').on('change', function () {
                const value = $(this).val();
                orderBy = {
                    '1': 'latest',
                    '2': 'bestseller',
                    '3': 'price_asc',
                    '4': 'price_desc'
                }[value] || 'latest';
                currentPage = 1;
                hasMoreProducts = true;
                loadProducts(false);
            });

            // Fiyat filtresi
            $('.price__filter--form').on('submit', function (e) {
                e.preventDefault();
                minPrice = parseFloat($('#Filter-Price-GTE2').val()) || null;
                maxPrice = parseFloat($('#Filter-Price-LTE2').val()) || null;
                currentPage = 1;
                hasMoreProducts = true;
                loadProducts(false);
            });
        });

        function loadShopCategories() {
            // Layout'tan kategori verisini al (eğer yüklenmemişse bekle)
            function renderCategories(categories) {
                const categoriesMenu = document.getElementById('shop-categories-menu');
                if (!categoriesMenu || !categories || !Array.isArray(categories)) {
                    return;
                }

                categoriesMenu.innerHTML = '';

                categories.forEach(category => {
                    // Ana kategori list item
                    const menuItem = document.createElement('li');
                    menuItem.className = 'widget__categories--menu__list';

                    // Ana kategori label
                    const label = document.createElement('label');
                    label.className = 'widget__categories--menu__label d-flex align-items-center';
                    label.style.width = '100%';
                    label.style.justifyContent = 'space-between';

                    // Sol taraf container (ikon + metin)
                    const leftContainer = document.createElement('div');
                    leftContainer.style.display = 'flex';
                    leftContainer.style.alignItems = 'center';
                    leftContainer.style.gap = '8px';
                    leftContainer.style.flex = '1';
                    leftContainer.style.cursor = 'pointer';

                    // Kategori ikonu
                    if (category.gruP_IKON) {
                        const icon = document.createElement('img');
                        icon.className = 'widget__categories--menu__img';
                        icon.src = category.gruP_IKON.startsWith('/') ? category.gruP_IKON : '/' + category.gruP_IKON;
                        icon.alt = 'categories-img';
                        leftContainer.appendChild(icon);
                    }

                    // Kategori adı
                    const categoryText = document.createElement('span');
                    categoryText.className = 'widget__categories--menu__text';
                    categoryText.textContent = category.anA_GRUP_ADI || '';
                    categoryText.style.cursor = 'pointer';
                    leftContainer.appendChild(categoryText);

                    // leftContainer'a tıklama event'i ekle (filtreleme için)
                    const categorySlugForMain = generateSlug(category.anA_GRUP_ADI);
                    leftContainer.addEventListener('click', function (e) {
                        e.stopPropagation();
                        window.location.href = `/magaza/kategori/${categorySlugForMain}`;
                    });

                    label.appendChild(leftContainer);
                        
                    // Label'a tıklama event'i ekle (leftContainer veya SVG dışındaysa sadece menü aç/kapa)
                    if (category.subCategories && category.subCategories.length > 0) {
                        label.addEventListener('click', function (e) {
                            // Eğer leftContainer veya SVG'ye tıklanmışsa, bu event'i işleme
                            if (e.target.closest('.widget__categories--menu__text') || 
                                e.target.closest('img.widget__categories--menu__img') ||
                                e.target.closest('svg') || 
                                e.target.tagName === 'svg' || 
                                e.target.tagName === 'path') {
                                return;
                            }
                            // leftContainer ve SVG dışına tıklanmışsa, sadece menüyü aç/kapa
                            e.preventDefault();
                            e.stopPropagation();
                            const subMenu = menuItem.querySelector('.widget__categories--sub__menu');
                            if (subMenu) {
                                const isVisible = subMenu.style.display !== 'none';
                                if (isVisible) {
                                    $(subMenu).slideUp(300);
                                    const arrowIcon = menuItem.querySelector('.widget__categories--menu__arrowdown--icon');
                                    if (arrowIcon) {
                                        arrowIcon.style.transform = 'rotate(0deg)';
                                    }
                                    menuItem.classList.remove('active');
                                } else {
                                    $(subMenu).slideDown(300);
                                    const arrowIcon = menuItem.querySelector('.widget__categories--menu__arrowdown--icon');
