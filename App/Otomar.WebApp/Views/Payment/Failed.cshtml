@model Otomar.WebApp.Dtos.Payment.PaymentDto
@{
    ViewData["Title"] = "Ödeme Başarısız";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Start breadcrumb section -->
<section class="breadcrumb__section breadcrumb__bg">
    <div class="container">
        <div class="row row-cols-1">
            <div class="col">
                <div class="breadcrumb__content text-center">
                    <h1 class="breadcrumb__content--title mb-15">Ödeme Başarısız</h1>
                    <ul class="breadcrumb__content--menu d-flex justify-content-center">
                        <li class="breadcrumb__content--menu__items"><a href="/">Ana Sayfa</a></li>
                        <li class="breadcrumb__content--menu__items"><span>Ödeme Başarısız</span></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End breadcrumb section -->
<!-- Start payment failed section -->
<section class="checkout__section section--padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <div class="checkout__form--inner">
                    <div class="payment__failed">
                        <div class="payment__failed--icon text-center mb-30">
                            <svg width="80" height="80" viewBox="0 0 24 24" fill="none"
                                 xmlns="http://www.w3.org/2000/svg">
                                <circle cx="12" cy="12" r="10" stroke="#dc3545" stroke-width="2" fill="#f8d7da" />
                                <path d="M15 9l-6 6M9 9l6 6" stroke="#dc3545" stroke-width="2" stroke-linecap="round" />
                            </svg>
                        </div>
                        <div class="payment__failed--content text-center mb-30">
                            <h2 class="payment__failed--title mb-15">Ödeme İşlemi Başarısız</h2>
                            <p class="payment__failed--desc mb-20">
                                Ödeme işleminiz gerçekleştirilemedi.
                                Lütfen kart bilgilerinizi kontrol ederek tekrar deneyiniz.
                            </p>
                            @if (TempData["ErrorMessage"] != null)
                            {
                                <div class="alert alert-danger mb-20">
                                    @TempData["ErrorMessage"]
                                </div>
                            }
                        </div>
                        @if (Model != null)
                        {
                            <div class="payment__failed--details">
                                <div class="checkout__summary">
                                    <div class="checkout__summary--inner">
                                        <h3 class="checkout__summary--title mb-20">Ödeme Detayları</h3>
                                        <table class="checkout__summary--total__table">
                                            <tbody>
                                                @if (!string.IsNullOrEmpty(Model.OrderCode))
                                                {
                                                    <tr class="checkout__summary--total__list">
                                                        <td class="checkout__summary--total__title text-left">Sipariş Kodu</td>
                                                        <td class="checkout__summary--amount text-right">
                                                            <strong>@Model.OrderCode</strong>
                                                        </td>
                                                    </tr>
                                                }
                                                <tr class="checkout__summary--total__list">
                                                    <td class="checkout__summary--total__title text-left">Ödeme Durumu</td>
                                                    <td class="checkout__summary--amount text-right">
                                                        <span class="badge badge-danger">@Model.Status</span>
                                                    </td>
                                                </tr>
                                                @if (Model.TotalAmount > 0)
                                                {
                                                    <tr class="checkout__summary--total__list">
                                                        <td class="checkout__summary--total__title text-left">Tutar</td>
                                                        <td class="checkout__summary--amount text-right">
                                                            <strong>@Model.TotalAmount.ToString("N2") ₺</strong>
                                                        </td>
                                                    </tr>
                                                }
                                                @if (Model.CreatedAt != default(DateTime))
                                                {
                                                    <tr class="checkout__summary--total__list">
                                                        <td class="checkout__summary--total__title text-left">Tarih</td>
                                                        <td class="checkout__summary--amount text-right">
                                                            @Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        }
                        <div class="payment__failed--actions text-center mt-30">
                            <a href="/odeme" class="primary__btn mr-15">Tekrar Dene</a>
                            <a href="/" class="secondary__btn">Ana Sayfaya Dön</a>
                        </div>
                        <div class="payment__failed--help text-center mt-30">
                            <p class="text-muted">
                                Sorun devam ederse lütfen <a href="/iletisim">müşteri hizmetlerimiz</a> ile iletişime
                                geçiniz.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End payment failed section -->
@section Styles {
    <style>
        .payment__failed {
            padding: 40px 20px;
        }

        .payment__failed--icon svg {
            animation: shake 0.5s ease-out;
        }

        @@keyframes shake {

            0%,
            100% {
                transform: translateX(0);
            }

            25% {
                transform: translateX(-10px);
            }

            75% {
                transform: translateX(10px);
            }
        }

        .checkout__summary {
            background: #f8f9fa;
            padding: 30px;
            border-radius: 5px;
            margin-top: 20px;
        }

        .badge {
            padding: 5px 10px;
            border-radius: 3px;
            font-size: 12px;
            font-weight: 600;
        }

        .badge-danger {
            background-color: #dc3545;
            color: white;
        }

        .alert {
            padding: 15px;
            border-radius: 5px;
            margin-bottom: 20px;
        }

        .alert-danger {
            background-color: #f8d7da;
            border: 1px solid #f5c6cb;
            color: #721c24;
        }

        .secondary__btn {
            display: inline-block;
            padding: 12px 30px;
            background-color: #6c757d;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

            .secondary__btn:hover {
                background-color: #5a6268;
                color: white;
                text-decoration: none;
            }

        .mr-15 {
            margin-right: 15px;
        }

        .text-muted {
            color: #6c757d;
        }
    </style>
}