@model Dictionary<string, string>

@{
    ViewData["Title"] = "Ödeme Yönlendirme";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Ödeme İşlemi Yönlendiriliyor...</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: #f5f5f5;
        }

        .loader {
            text-align: center;
        }

        .spinner {
            border: 4px solid #f3f3f3;
            border-top: 4px solid #3498db;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            animation: spin 1s linear infinite;
            margin: 0 auto 20px;
        }

        @@keyframes spin {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }
    </style>
</head>
<body>
    <div class="loader">
        <div class="spinner"></div>
        <h3>Güvenli ödeme sayfasına yönlendiriliyorsunuz...</h3>
        <p>Lütfen bekleyiniz.</p>
    </div>

    <form id="paymentForm" method="post" action="@ViewBag.ThreeDVerificationUrl">
        @if (Model != null)
        {
            foreach (var param in Model)
            {
                <input type="hidden" name="@param.Key" value="@param.Value" />
            }
        }
    </form>

    <script>
        window.onload = function() {
            document.getElementById('paymentForm').submit();
        };
    </script>
</body>
</html>